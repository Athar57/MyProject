@model IEnumerable<AdminLTE.Models.Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card mt-5">
                <div class="card-header">
                    <h3>Customer Table</h3>
                    <div class="card-tools col-12 px-5 mb-3">
                        <div class="input-group input-block-level group-sm">
                            <a asp-action="Create" asp-controller="Customer" class="btn btn-primary ml-auto">Add Customer</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>

                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.Adress)</th>
                                <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
                                <th>@Html.DisplayNameFor(model => model.City)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Adress)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                                    <td>@Html.DisplayFor(modelItem => item.City.Name)</td>
                                    <td>
                                        <a asp-action="Create" asp-controller="Customer" asp-route-id="@item.Id" class="btn btn-success"><i class="fas fa-edit"></i></a>
                                        <a asp-action="Delete" asp-controller="Customer" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Are You sure you want to delete this Customer?')"><i class="fas fa-trash-alt"></i></a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
